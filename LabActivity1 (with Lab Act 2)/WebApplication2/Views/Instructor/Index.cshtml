@model IEnumerable<Instructor>;

<div>Instructor List</div>

<a class="btn btn-primary" asp-area="" asp-action="AddInstructor" asp-controller="Instructor">Add Instructor</a>
<table class="table table-dark">

    <tr>
        <th colspan="7">Instructors</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Status</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Edit</td>
        <td>Delete</td>


    </tr>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.FirstName @instructor.LastName</td>
            <td>@(instructor.isTenured ? "Permanent" : "Probationary")</td>
            <td>@instructor.Rank</td>
            <td>@instructor.HiringDate</td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@instructor.Id">Show Details</a></td>
            <td><a class="btn btn-primary" asp-action="EditInstructor" asp-route-id="@instructor.Id">Edit</a></td>
            <td><a class="btn btn-primary" asp-action="DeleteInstructor" asp-route-id="@instructor.Id">Delete</a></td>

        </tr>
    }
</table>
