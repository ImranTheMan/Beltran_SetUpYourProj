@page
@model WebApplication1.Pages.AboutModel
@{
    ViewData["Title"] = "About Page";
    var emailAdd = "imranjason.beltran.cics@ust.edu.ph";
    var myRole = "IT Student";
    var myPhoneNum = "09770254605";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <div class="area row">
            <!-- Details on the left -->
            <div class="col-md-6">
                <div class="Details p-3 text-start">
                    <h1><strong>About Me</strong></h1>
                    <p><strong>Email Address</strong> <br /> @emailAdd </p>
                    <p><strong>Role </strong><br /> @myRole </p>
                    <p><strong>Phone Number</strong> <br /> @myPhoneNum </p>
                </div>
            </div>
            <!-- Picture on the right -->
            <div class="col-md-4">
                <img src="~/css/me.jpg" class="myimg img-fluid" alt="My Picture">
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>